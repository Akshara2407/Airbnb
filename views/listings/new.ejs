<% layout("layouts/boilerplate") -%> 
<div class="row mt-3">
    <div class="col-8 offset-2">
        <br><br>

    
    <h3>Create a new listings</h3>
    <form method="post" action="/listings">
        <div class="mb-3">
         <label for="title" class="form-label">Title</label> 
         <input placeholder="Add a catchy title" name="listing[title]" type="text"  class="form-control">
        </div>
        <div class="mb-3">
            <label for="description" class="form-label">Description</label> 
             <input placeholder="Enter description" name="listing[description]" type="text" class="form-control">
        
        </div>
        <div class="mb-3">
            <label for="image" class="form-label">Image</label> 
             <input placeholder="Enter image URL/Link" name="listing[image]" type="text" class="form-control">
        </div>
        <div class="row">
             <div class="mb-3 col=md-4">
             <label for="price" class="form-label">price</label> 
            <input placeholder="1200" name="listing[price]" type="number" class="form-control">
          </div>
      
          <div class="mb-3 col-md-8">
         <label for="country" class="form-label">Country</label> 
          
         <input placeholder="India" name="listing[country]" type="text" class="form-control">
          </div>

        </div>
       
       <div class="mb-3">
        <label for="location" class="form-label">Location</label> 
         <input placeholder="Pen,Raigad" name="listing[location]" type="text" class="form-control">
        </div>
       
        
        <button class="btn btn- add-btn mt-3">Add</button>
        <br><br><br>
    </form>
    </div>
 </div>


